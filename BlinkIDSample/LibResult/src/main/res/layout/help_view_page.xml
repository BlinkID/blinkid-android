<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeHelpLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/help_background"
    android:paddingBottom="6dp" >


    <TextView
        android:id="@+id/helpMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_horizontal"
        android:text="@string/help_msg_01"
        android:textColor="@color/text_white"
        android:textSize="16sp" >
    </TextView>

    <ImageView
        android:id="@+id/helpImage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/helpMessage"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:contentDescription="@android:string/ok"
        android:src="@drawable/help01" >
    </ImageView>

</RelativeLayout>